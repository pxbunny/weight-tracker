#!/bin/sh

set -e

echo "ðŸš€ Running pre-commit hook ðŸš€"

files=$(git diff --cached --name-only --diff-filter=d "*.py")

if [ -n "$files" ]; then
  echo -e "\nâœ¨ Running linter..."
  pylint $files --rcfile cli/.pylintrc
  echo -e "âœ¨ Sorting imports..."
  isort $files
  git add $files
fi

echo -e "\nðŸŽ‰ Pre-commit status: success ðŸŽ‰\n"
